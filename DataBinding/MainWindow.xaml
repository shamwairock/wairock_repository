<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox" FontSize="14" FontFamily="Verdana" FontWeight="Bold" HorizontalAlignment="Left" Height="32" Margin="79,83,0,0" TextWrapping="Wrap" 
                 Text="{Binding DisplayValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" Width="360"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="79,150,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="171,149,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="268"/>

    </Grid>
</Window>
